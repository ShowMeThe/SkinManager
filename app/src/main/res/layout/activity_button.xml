<?xml version="1.0" encoding="utf-8"?>
<layout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        skin="@{`background`}"
        tools:context=".activity.button.ButtonActivity">


        <Button
            android:text="TextView"
            android:gravity="center"
            android:drawableTop="@drawable/dide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            skin="@{`textColor|background|drawableTint`}"
            />


        <com.google.android.material.button.MaterialButton
            android:text="MaterialTextView"
            android:drawableTop="@drawable/dide"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            skin="@{`textColor|background|drawableTint`}"
            />

        <com.google.android.material.button.MaterialButton
            android:text="MaterialTextView"
            app:icon="@drawable/dide"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            skin="@{`textColor|background|iconTint`}"
            />

    </LinearLayout>
</layout>