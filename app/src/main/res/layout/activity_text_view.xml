<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".activity.textview.TextViewActivity">


        <TextView
            android:text="TextView"
            android:gravity="center"
            android:drawableTop="@drawable/dide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            skin="@{`textColor|background|drawableTint`}"
            />


        <com.google.android.material.textview.MaterialTextView
            android:text="MaterialTextView"
            android:drawableTop="@drawable/dide"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            skin="@{`textColor|background|drawableTint`}"
            />


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/change"
            android:layout_marginTop="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Switching themes"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            skin="@{`textColor|backgroundColor`}"
            />

    </LinearLayout>

</layout>